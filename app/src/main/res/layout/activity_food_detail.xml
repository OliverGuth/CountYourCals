<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:baselineAligned="false"
    android:weightSum="100">

    <TextView
        android:text="Lebensmittelname"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/DiaryTextCaption"

        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/Black"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:textSize="36sp"
        android:layout_weight="10" />

    <View style="@style/Divider"/>
    <android.support.v4.widget.NestedScrollView
        tools:context="fhdw.bg.bfwi314b.countyourcals.gui.DiaryActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/DiaryTableLayout">

        </TableLayout>
    </android.support.v4.widget.NestedScrollView>
    <View style="@style/Divider"/>

    <Button
        android:text="HinzufÃ¼gen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/FoodDetailButtonNewEntry"
        android:layout_weight="10"
        android:background="@color/Grey"
        android:layout_margin="5dp"
        android:textColor="@color/White" />

</LinearLayout>
