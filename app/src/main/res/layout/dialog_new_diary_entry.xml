<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <TextView
        android:text="Neuer Eintrag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DialogNewEntryCaption"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/Black"
        android:layout_margin="10dp"
        android:gravity="center_vertical" />
    //Timestamp
    //name
    //'->Quantity + Unit
    //'->Calories


    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DialogNewEntryDatePicker"
        android:minDate="2016-01-01"
        android:datePickerMode="spinner"
        android:calendarViewShown="false" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DialogNewEntryFoodSpinner"
        tools:background="@drawable/spinner_border" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/DialogNewEntryQuanitityValue"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@color/Black"
            android:hint="Menge"
            android:textColorHint="@color/Grey"
            android:inputType="number" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/DialogNewEntryUnitValue"
            android:layout_weight="2"
            android:maxLines="1"

            android:textColor="@color/Black"
            android:hint="Einheit"
            android:textColorHint="@color/Grey" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:id="@+id/DialogNewEntryCaloriesValue"
        android:layout_weight="2"
        android:maxLines="1"

        android:textColor="@color/Black"
        android:hint="Kalorien"
        android:textColorHint="@color/Grey" />

    <Button
        android:text="Speichern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DialogNewEntrySaveButton" />


</LinearLayout>