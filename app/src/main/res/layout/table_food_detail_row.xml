<?xml version="1.0" encoding="utf-8"?>

<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/FoodDetailTableRow"
    android:background="@color/colorWhite"
    android:weightSum="100">

    <TextView
        android:text="1."
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/FoodDetailLineNumber"
        android:layout_weight="5"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_vertical" />

    <TextView
        android:text="Gericht 1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/FoodDetailLineName"
        android:layout_weight="24"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_vertical" />

    <TextView
        android:text="100 Gramm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/FoodDetailLineVolume"
        android:layout_weight="25"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_vertical" />


    <TextView
        android:text="XYZ kcal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/FoodDetailLineCalories"
        android:layout_weight="23"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_vertical" />

    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/image_button"
        android:layout_weight="11"
        android:layout_margin="3dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/FoodDetailButtonLineEdit" />

    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/image_button"
        android:layout_weight="11"
        android:layout_margin="3dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/FoodDetailButtonLineDelete" />
</TableRow>