<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:weightSum="100">

        <TextView
            android:text="1."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/DiaryLineNumber"
            android:layout_weight="5"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical" />

        <TextView
            android:text="Gericht 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DiaryLineName"
            android:layout_weight="37"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical" />

        <TextView
            android:text="XYZ kcal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/DiaryLineCalories"
            android:layout_weight="30"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical" />

        <include
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            layout="@layout/image_button"
            android:layout_weight="14"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/DiaryLineEditButton" />

        <include
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            layout="@layout/image_button"
            android:layout_weight="14"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/DiaryLineDeleteButton" />
    </TableRow>