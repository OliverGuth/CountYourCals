<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fhdw.bg.bfwi314b.countyourcals">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light">
        <activity
            android:name=".gui.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".gui.DiaryActivity"
            android:label="@string/title_activity_diary" />
        <activity android:name=".gui.AccountActivity" />
        <activity android:name=".gui.SettingsActivity" />
        <activity
            android:name=".gui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".gui.MealDetailActivity" />
        <activity android:name=".gui.ManagerActivity" />
        <activity android:name=".gui.StatisticsActivity"></activity>
    </application>

</manifest>